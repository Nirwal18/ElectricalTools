<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/category_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Inverter"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/category_btn_2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/category_btn_3"
            app:layout_constraintEnd_toStartOf="@+id/category_btn_3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/category_btn_1"
            app:layout_constraintTop_toTopOf="@+id/category_btn_3">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_video_library_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculator" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_btn_1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/category_btn_2"
            app:layout_constraintEnd_toStartOf="@+id/category_btn_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/category_btn_2"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_calculate_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculator" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_btn_4"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintStart_toEndOf="@+id/category_btn_3"
            app:layout_constraintTop_toBottomOf="@+id/category_item_title">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_build_circle_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculator" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_btn_3"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/category_btn_4"
            app:layout_constraintEnd_toStartOf="@+id/category_btn_4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/category_btn_2"
            app:layout_constraintTop_toTopOf="@+id/category_btn_4">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_baseline_electrical_services_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculator" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/category_btn_5"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toTopOf="@+id/btn_layout_admin"
            app:layout_constraintEnd_toStartOf="@+id/category_btn_6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/category_btn_4">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_baseline_electrical_services_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculator" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/category_btn_6"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/category_btn_5"
            app:layout_constraintEnd_toStartOf="@+id/category_btn_7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/category_btn_5"
            app:layout_constraintTop_toTopOf="@+id/category_btn_5">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_baseline_electrical_services_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculator" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_btn_7"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/category_btn_6"
            app:layout_constraintEnd_toStartOf="@+id/category_btn_8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/category_btn_6"
            app:layout_constraintTop_toTopOf="@+id/category_btn_6">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ic_baseline_electrical_services_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculator" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/category_btn_8"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@+id/category_btn_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/category_btn_7"
            app:layout_constraintTop_toTopOf="@+id/category_btn_7"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@mipmap/ic_see_more_round" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Calculator" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_layout_admin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/edit_catagory_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Edit" />

            <Button
                android:id="@+id/delete_catagory_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
